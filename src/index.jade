html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  link(href="https://fonts.googleapis.com/css?family=Spectral:800i", rel="stylesheet")
  link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
  link(href='index.css', rel='stylesheet', type='text/css')
  audio#buzzer(src='http://codingtutorials360.com/14244764.mp3', type='audio/mpeg')
  title Document
body
  .text-center
    h1 Build a Pomodoro Clock
    .timeDiv
      h1#titleS Session Time
      a#minusS(href="#").btn.btn-primary -
      h2#timeType
      h2#numS 5
      a#addS(href="#").btn.btn-primary +
      a#reset(href="#").btn.btn-primary Reset
    .breakDiv
      h1#titleB Break Time
      a#minusB(href="#").btn.btn-primary -
      h2#numB 5
      a#addB(href="#").btn.btn-primary +   
      a#start(href="#").btn.btn-primary Start       

script(src='https://code.jquery.com/jquery-2.2.4.min.js')
script(src='index.js')